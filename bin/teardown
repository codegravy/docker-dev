if [ `id -u` -ne 0 ]; then
	sudo `which $0` "$@"
	exit 1
fi
NAME=$1
if [ -z "$NAME" ]; then
	echo "No name entered. Cannot continue"
	exit 1
fi
docker start $NAME > /dev/null
docker exec $NAME /usr/local/bin/teardown > /dev/null 2> /dev/null
CODE=$?
if test $CODE = 0; then
	docker stop $NAME > /dev/null
	docker rm $NAME > /dev/null
	echo 'TEARDOWN COMPLETE'
else
	echo 'TEARDOWN FAILED'
fi
